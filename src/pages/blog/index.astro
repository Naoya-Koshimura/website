---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';
import { Image } from 'astro:assets';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<Layout title="Blog | 直手有為のページ" description="開発日誌や雑記など">
	<section class="py-8">
        <h1 class="text-4xl font-bold mb-12 text-center">Blog</h1>
		<div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
			{
				posts.map((post) => (
					<article class="flex flex-col group">
						<a href={`/blog/${post.id}/`} class="block mb-4 rounded-xl overflow-hidden shadow-sm hover:shadow-md transition-shadow aspect-[16/9]">
							<Image 
                                width={720} 
                                height={360} 
                                src={post.data.heroImage} 
                                alt="" 
                                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                            />
						</a>
						<div class="flex-1">
                            <div class="mb-2 text-sm text-gray-500">
                                <FormattedDate date={post.data.pubDate} />
                            </div>
							<h2 class="text-xl font-bold leading-tight mb-2 group-hover:text-teal-700 transition-colors">
								<a href={`/blog/${post.id}/`}>
									{post.data.title}
								</a>
							</h2>
                            <p class="text-gray-600 line-clamp-3 text-sm">
                                {post.data.description}
                            </p>
						</div>
					</article>
				))
			}
		</div>
	</section>
</Layout>
